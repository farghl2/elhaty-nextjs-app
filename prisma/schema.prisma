generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Plate {
  id          Int         @id @default(autoincrement())
  title       String
  desc        String
  imageUrl    String
  status      Boolean
  bestSale    Boolean
  category    Category    @relation(fields: [categoryId], references: [id])
  categoryId  Int
  sizes       PlateSize[]
}

model PlateSize {
  id       Int     @id @default(autoincrement())
  size     String
  plate    Plate   @relation(fields: [plateId], references: [id])
  plateId  Int
  prices   PlateSizePrice[]
}

model PlateSizePrice {
  id          Int     @id @default(autoincrement())
  type        ServiceType
  price       Float
  offer       Float?
  plateSize   PlateSize @relation(fields: [plateSizeId], references: [id])
  plateSizeId Int
}

model Category {
  id     Int     @id @default(autoincrement())
  name   String
  plates Plate[]
}

enum ServiceType {
  TAKEAWAY
  DINEIN
}
